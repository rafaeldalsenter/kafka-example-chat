<Window x:Class="KafkaExampleChat.WpfApplication.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KafkaExampleChat.WpfApplication.Views"
        mc:Ignorable="d"
        Title="Janela de chat" Height="450" Width="550" ResizeMode="NoResize">
    <Grid>
        <local:BindableRichTextBox Source="{Binding Chat.ChatWindow}" IsReadOnly="True" Height="328"  VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,10,10,0" />
        <TextBox Name="TxtEnvio" Text="{Binding Chat.Message}" Margin="10,0,0,30" TextWrapping="Wrap" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="408" Height="35" />
        <Button Name="BtnEnviar" Command="{Binding Path=TalkCommand}" CommandParameter="{Binding}" Content="Enviar" HorizontalAlignment="Right" Margin="0,0,10,30" VerticalAlignment="Bottom" Height="35" Width="100" Click="BtnEnviar_Click" />
        <StatusBar Name="StatusBar" VerticalAlignment="Bottom" Height="20">
            <StatusBarItem>
                <TextBlock Name="LblStatus" Text="{Binding Chat.StatusBar}" FontSize="10" />
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>